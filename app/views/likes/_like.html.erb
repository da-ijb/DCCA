<h3>いいね件数: <%= post.likes.count %></h3>
<% if user_signed_in? %>
<% if current_user.already_liked?(post) %>
  <%= button_to '🖤', post_like_path(post_id: post.id , id: post.likes[0].id), method: :delete, remote: true, id: :"like-btn-#{post.id}" %>
<% else %>
  <%= button_to '♡', post_likes_path(post), method: :post, remote: true, id: :"like-btn-#{post.id}" %>
<% end %>
<h2>いいねしたユーザー</h2>
<% @post.liked_users.each do |user| %>
  <li><%= user.nickname %></li>
<% end %>
<% end %>